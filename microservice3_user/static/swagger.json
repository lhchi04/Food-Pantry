{
  "swagger": "2.0",
  "info": {
    "title": "User Authentication API",
    "description": "API for user authentication",
    "version": "1.0"
  },
  "paths": {
    "/signup": {
      "post": {
        "summary": "Sign up",
        "description": "Create a new account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "pwd": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully signed up!"
          },
          "401": {
            "description": "Username is already taken."
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Log in",
        "description": "Log in",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "pwd": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged in!"
          },
          "401": {
            "description": "Invalid username or password."
          }
        }
      }
    }
  }
}
